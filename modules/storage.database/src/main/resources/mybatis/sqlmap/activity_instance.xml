<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.smart.framework.engine.modules.storage.dao.ActivityInstanceDAO">
     
    <sql id="baseColumn">
        id, gmt_create, gmt_modified, 	process_instance_id,process_definition_id,process_definition_activity_id,execution_instance_id,task_instance_id
    </sql>

    <insert id="insert" parameterType="ActivityInstanceEntity">
       insert into activity_instance(<include refid="baseColumn"/>)
       values (#{id},  now(), now(), #{processInstanceId}, #{processDefinitionId},
        #{processDefinitionActivityId}, #{executionInstanceId},#{taskInstanceId})
   </insert>

    <delete id="delete" parameterType="long">
        delete from activity_instance where id=#{id}
    </delete>

