<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:mybatis="http://www.foo.com/schema/data/mybatis"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
        http://www.foo.com/schema/data/mybatis http://www.foo.com/schema/data/mybatis/spring-mybatis.xsd">

    <import resource="sequence.xml"/>

    <bean id="dataSource" class="com.taobao.tddl.jdbc.group.TGroupDataSource" init-method="init">
        <property name="appName" value="#{datasourceProperties.tddlApp}"/>
        <property name="dbGroupKey" value="#{datasourceProperties.tddlGroup}"/>
        <property name="dataSourceType" value="DruidDataSource"/>
    </bean>

    <context:component-scan base-package="com.alibaba.smart.framework.engine.modules.storage"/>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean"
          p:dataSource-ref="dataSource"
          p:configLocation="classpath:mybatis/mybatis-config.xml"
          p:mapperLocations="classpath:mybatis/sqlmap/*.xml"/>


    <bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg index="0" ref="sqlSessionFactory"/>
    </bean>


    <bean id="mapperScannerConfigurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer"
          p:basePackage="com.alibaba.smart.framework.engine.modules.storage"
          p:markerInterface="com.alibaba.spring.data.mybatis.repository.MybatisRepository"
          p:sqlSessionFactoryBeanName="sqlSessionFactory"
          p:sqlSessionTemplateBeanName="sqlSession"/>


    <mybatis:repositories base-package="com.alibaba.smart.framework.engine.modules.storage"
                          sql-session-ref="sqlSession"
                          sequence-dao-ref="sequenceDao"/>


    <!-- 事务管理器 -->
    <bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
          p:dataSource-ref="dataSource"/>
</beans>
