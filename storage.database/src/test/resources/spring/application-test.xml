<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:mybatis="http://www.foo.com/schema/data/mybatis"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
        http://www.foo.com/schema/data/mybatis http://www.foo.com/schema/data/mybatis/spring-mybatis.xsd">

    <import resource="sequence.xml"/>

    <bean id="dataSource" class="com.taobao.tddl.jdbc.group.TGroupDataSource" init-method="init">
        <property name="appName" value="#{datasourceProperties.tddlApp}"/>
        <property name="dbGroupKey" value="#{datasourceProperties.tddlGroup}"/>
        <property name="dataSourceType" value="DruidDataSource"/>
    </bean>

    <context:component-scan base-package="com.alibaba.smart.framework.engine.persister"/>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean"
          p:dataSource-ref="dataSource"
          p:configLocation="classpath:mybatis/mybatis-config.xml"
          p:mapperLocations="classpath:mybatis/sqlmap/*.xml"/>

    <!--<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">-->
        <!--<property name="dataSource" ref="jdbcDataSource" />-->
        <!--<property name="configLocation" value="classpath:batisConfig.xml" />-->

        <!--&lt;!&ndash; <property name="configurationProperties"> <props> <prop key="mapUnderscoreToCamelCase">true</prop> -->
            <!--</props> </property> &ndash;&gt;-->
    <!--</bean>-->

    <bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg index="0" ref="sqlSessionFactory"/>
    </bean>

    <!-- Mapper接口所在包名，Spring会自动查找其下的Mapper -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.alibaba.smart.framework.engine.persister.database.dao" />
    </bean>


    <!--<bean id="mapperScannerConfigurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer"-->
          <!--p:basePackage="com.alibaba.smart.framework.engine.persister.database.dao"-->
          <!--p:markerInterface="com.alibaba.spring.data.mybatis.repository.MybatisRepository"-->
          <!--p:sqlSessionFactoryBeanName="sqlSessionFactory"-->
          <!--p:sqlSessionTemplateBeanName="sqlSession"/>-->


    <!--<mybatis:repositories base-package="com.alibaba.smart.framework.engine.persister.database.dao"-->
                          <!--sql-session-ref="sqlSession"-->
                          <!--sequence-dao-ref="sequenceDao"/>-->


    <!-- 事务管理器 -->
    <bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
          p:dataSource-ref="dataSource"/>

    <bean id="springContextUtil" class="com.alibaba.smart.framework.engine.persister.util.SpringContextUtil" />

</beans>
