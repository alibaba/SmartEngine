<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.smart.framework.engine.persister.database.dao.ProcessInstanceDAO">

    <sql id="baseColumn">
        id, gmt_create, gmt_modified, process_definition_id,
        status, parent_process_instance_id
    </sql>

    <insert id="insert" parameterType="ProcessInstanceEntity">
        insert into process_instance(<include refid="baseColumn"/>)
        values (#{id}, now(), now(), #{processDefinitionId},
        #{status}, #{parentProcessInstanceId})
    </insert>

    <delete id="delete" parameterType="long">
        delete from process_instance where id=#{id}
    </delete>

    <update id="update" parameterType="ProcessInstanceEntity">
        update process_instance
        <set>
            gmt_modified=now()
            <if test="status != null">,status = #{status}</if>
            <if test="parentProcessInstanceId != null">,parent_process_instance_id = #{parentProcessInstanceId}</if>
        </set>
        where id=#{id}
    </update>

    <select id="findOne" resultType="ProcessInstanceEntity">
        select
        <include refid="baseColumn"/>
        from process_instance where id=#{id}
    </select>




</mapper>
