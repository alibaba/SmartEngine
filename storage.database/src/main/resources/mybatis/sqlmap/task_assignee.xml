<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.smart.framework.engine.persister.database.dao.TaskAssigneeDAO">

    <sql id="baseColumn">
        id, gmt_create, gmt_modified,process_instance_id,
        activity_instance_id, execution_instance_id,task_instance_id,title,assignee_id,priority,claim_time,end_time
    </sql>

    <insert id="insert" parameterType="TaskAssigneeEntity">
        insert into task_assignee(<include refid="baseColumn"/>)
        values (#{id}, now(), now(), #{processInstanceId},
        #{activityInstanceId}, #{executionInstanceId},#{taskInstanceId},#{title},#{assigneeId},#{priority},#{claimTime},#{endTime})
    </insert>

    <delete id="delete" parameterType="long">
        delete from task_assignee where id=#{id}
    </delete>

    <update id="update" parameterType="TaskAssigneeEntity">
        update task_assignee
        <set>
            gmt_modified=now()
            <if test="title != null">,title = #{title}</if>
            <if test="assigneeId != null">,assignee_id = #{assigneeId}</if>
            <if test="priority != null">,priority = #{priority}</if>
            <if test="claimTime != null">,claim_time = #{claimTime}</if>
            <if test="endTime != null">,end_time = #{endTime}</if>
        </set>
        where id=#{id}
    </update>

    <select id="findPendingTask" resultType="TaskAssigneeEntity">
        select
        <include refid="baseColumn"/>
        from task_assignee where assignee_id=#{assigneeId}
    </select>

    <select id="findSameTask" resultType="TaskAssigneeEntity">
        select
        <include refid="baseColumn"/>
        from task_assignee where task_instance_id=#{taskInstanceId}
    </select>


</mapper>
