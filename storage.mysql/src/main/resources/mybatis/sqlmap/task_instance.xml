<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.smart.framework.engine.persister.database.dao.TaskInstanceDAO">

    <sql id="baseColumn">
        id, gmt_create, gmt_modified,process_instance_id, process_definition_id_and_version,process_definition_type,
        activity_instance_id, process_definition_activity_id, execution_instance_id,claim_user_id,priority,tag,claim_time,complete_time,status,comment,extension,title
    </sql>



    <insert id="insert" parameterType="TaskInstanceEntity"  useGeneratedKeys="true" keyProperty="id">
        insert into se_task_instance(<include refid="baseColumn"/>)
        values (#{id}, now(), now(), #{processInstanceId}, #{processDefinitionIdAndVersion},#{processDefinitionType},
        #{activityInstanceId}, #{processDefinitionActivityId},#{executionInstanceId},#{claimUserId},#{priority},#{tag},#{claimTime},#{completeTime},#{status},#{comment},#{extension},#{title})
    </insert>


    <!-- 通过map参数形式创建任务，主要可以处理自定义字段 -->
    <insert id="insertWithCustomFields">
      insert into se_task_instance(<include refid="baseColumn"/>
        <foreach collection="taskInstanceEntityMap.keys" separator="," item="key" open="," close=")">
            ${key}
        </foreach>
        values
        (#{taskInstanceEntity.id}, now(), now(), #{taskInstanceEntity.processInstanceId}, #{taskInstanceEntity.processDefinitionIdAndVersion},#{taskInstanceEntity.processDefinitionType},
        #{taskInstanceEntity.activityInstanceId}, #{taskInstanceEntity.processDefinitionActivityId},#{taskInstanceEntity.executionInstanceId},#{taskInstanceEntity.claimUserId},#{taskInstanceEntity.priority},#{taskInstanceEntity.tag},#{taskInstanceEntity.claimTime},#{taskInstanceEntity.completeTime},#{taskInstanceEntity.status},#{taskInstanceEntity.comment},#{taskInstanceEntity.extension},#{taskInstanceEntity.title}
        <foreach collection="taskInstanceEntityMap.keys" item="key" separator="," open="," close=")">
            #{taskInstanceEntityMap[${key}]}
        </foreach>
    </insert>

    <delete id="delete" parameterType="long">
        delete from se_task_instance where id=#{id}
    </delete>

    <sql id="update_sql">
        <set>
            gmt_modified=now()
            <if test="taskInstanceEntity.claimUserId != null">,claim_user_id = #{taskInstanceEntity.claimUserId}</if>
            <if test="taskInstanceEntity.priority != null">,priority = #{taskInstanceEntity.priority}</if>
            <if test="taskInstanceEntity.claimTime != null">,claim_time = #{taskInstanceEntity.claimTime}</if>
            <if test="taskInstanceEntity.completeTime != null">,complete_time = #{taskInstanceEntity.completeTime}</if>
            <if test="taskInstanceEntity.status != null">,status = #{taskInstanceEntity.status}</if>
            <if test="taskInstanceEntity.tag != null">, tag = #{taskInstanceEntity.tag} </if>
            <if test="taskInstanceEntity.comment != null">, comment = #{taskInstanceEntity.comment} </if>
            <if test="taskInstanceEntity.extension != null">, extension = #{taskInstanceEntity.extension} </if>
            <if test="taskInstanceEntity.title != null">, title = #{taskInstanceEntity.title} </if>

        </set>
    </sql>

    <update id="update" parameterType="TaskInstanceEntity">
        update se_task_instance
       <include refid="update_sql"/>
        where id=#{taskInstanceEntity.id}
    </update>

    <update id="updateFromStatus">
        update se_task_instance
        <include refid="update_sql"/>
        where id=#{taskInstanceEntity.id} and status = #{fromStatus}
    </update>



    <select id="findOne" resultType="TaskInstanceEntity">
        select
        <include refid="baseColumn"/>
        from se_task_instance where id=#{id}
    </select>

    <select id="findTaskByProcessInstanceIdAndStatus" resultType="TaskInstanceEntity" >
        select
        <include refid="baseColumn"/>
        from se_task_instance where process_instance_id = #{param1} and status = #{param2}
    </select>

    <select id="findTaskByAssignee" resultType="TaskInstanceEntity" parameterType="TaskInstanceQueryByAssigneeParam">
        select distinct task.id, task.gmt_create, task.gmt_modified,task.process_instance_id, process_definition_id_and_version,
        activity_instance_id,process_definition_activity_id, execution_instance_id,claim_user_id,priority, task.tag, task.process_definition_type, claim_time,complete_time,status,comment,extension,title
        from  se_task_instance task,se_task_assignee_instance assignee where task.id = assignee.task_instance_id

        <if test = "status != null" > and task.status = #{status} </if>

        <include refid="pending_where_condition"/>

        <include refid="pending_task_assignee_choose_sql"/>

        <include refid="where_custom_condition"/>

        order by task.gmt_modified desc

        <if test="pageOffset != null and pageSize != null">limit #{pageOffset},#{pageSize}</if>

    </select>

    <select id="findTaskCustomFieldsByAssignee" resultType="java.util.Map" parameterType="TaskInstanceQueryByAssigneeParam">
        select distinct task.id
        <include refid="custom_column_sql"></include>

        from  se_task_instance task,se_task_assignee_instance assignee where task.id = assignee.task_instance_id

        <if test = "status != null" > and task.status = #{status} </if>

        <include refid="pending_where_condition"/>

        <include refid="pending_task_assignee_choose_sql"/>

        <include refid="where_custom_condition"/>

        order by task.gmt_modified desc

        <if test="pageOffset != null and pageSize != null">limit #{pageOffset},#{pageSize}</if>

    </select>

    <sql id="custom_column_sql">
        <if test="customFieldsQueryParam != null and customFieldsQueryParam.allCustomFieldsList != null">
            <foreach item="item" index="index" separator="," open="," close=""  collection="customFieldsQueryParam.allCustomFieldsList">
                ${item}
            </foreach>
        </if>
    </sql>


    <select id="countTaskByAssignee" resultType="int" parameterType="TaskInstanceQueryByAssigneeParam">
        select  count(distinct task.id)
        from  se_task_instance task,se_task_assignee_instance assignee where task.id = assignee.task_instance_id

        <if test = "status != null" > and task.status = #{status} </if>

        <include refid="pending_where_condition"/>

        <include refid="pending_task_assignee_choose_sql"/>

        <include refid="where_custom_condition"/>

        <if test="pageOffset != null and pageSize != null">limit #{pageOffset},#{pageSize}</if>

    </select>

    <sql id="pending_task_assignee_choose_sql">
        <choose>
            <when test="assigneeUserId != null and assigneeGroupIdList != null">
                and (      (assignee.assignee_id =  #{assigneeUserId} and assignee.assignee_type = 'user') or (assignee.assignee_id in
                <foreach item="item" index="index" separator="," open="(" close=")"  collection="assigneeGroupIdList">
                    #{item}
                </foreach>
                and assignee.assignee_type = 'group')    )
            </when>
            <when test="assigneeUserId != null">
                and assignee.assignee_id =  #{assigneeUserId} and assignee.assignee_type = 'user'
            </when>

            <when test="assigneeGroupIdList != null">
                and assignee.assignee_id in
                <foreach item="item" index="index" separator="," open="(" close=")"  collection="assigneeGroupIdList">
                    #{item}
                </foreach>
                and assignee.assignee_type = 'group'
            </when>

            <otherwise>

            </otherwise>
        </choose>

    </sql>

    <sql id="pending_where_condition">
        <if test="taskInstanceId != null">and task.id = #{taskInstanceId}</if>
        <if test="processDefinitionType != null">  and  task.process_definition_type = #{processDefinitionType} </if>
        <if test="processInstanceIdList != null">
            and task.process_instance_id in
            <foreach item="item" index="index" separator="," open="(" close=")"  collection="processInstanceIdList">
                #{item}
            </foreach>
        </if>
    </sql>



    <select id="findTaskList" resultType="TaskInstanceEntity" parameterType="TaskInstanceQueryParam">
        select  task.id, task.gmt_create, task.gmt_modified,task.process_instance_id, process_definition_id_and_version,
        activity_instance_id,process_definition_activity_id, execution_instance_id,claim_user_id,priority, task.tag, task.process_definition_type, claim_time,complete_time,status,comment,extension,title
        from  se_task_instance task  where 1=1
        <include refid="where_condition"/>
        <include refid="where_custom_condition"/>
        order by task.gmt_modified desc
        <if test="pageOffset != null and pageSize != null">limit #{pageOffset},#{pageSize}</if>

    </select>
    <select id="findTaskCustomFields" resultType="java.util.Map" parameterType="TaskInstanceQueryParam">
        select  task.id
        <include refid="custom_column_sql"></include>
        from  se_task_instance task  where 1=1
        <include refid="where_condition"/>
        <include refid="where_custom_condition"/>
        order by task.gmt_modified desc
        <if test="pageOffset != null and pageSize != null">limit #{pageOffset},#{pageSize}</if>

    </select>


    <select id="count" resultType="int" parameterType="TaskInstanceQueryParam">
        select  count(task.id)
        from  se_task_instance task where 1=1
        <include refid="where_condition"/>
        <include refid="where_custom_condition"/>
        <if test="pageOffset != null and pageSize != null">limit #{pageOffset},#{pageSize}</if>

    </select>


    <sql id="where_condition">
        <if test="taskInstanceId != null">and task.id = #{taskInstanceId}</if>
        <if test="status != null">  and task.status = #{status} </if>
        <if test="processDefinitionType != null">  and  task.process_definition_type = #{processDefinitionType} </if>
        <if test="claimUserId != null">  and  task.claim_user_id = #{claimUserId} </if>
        <if test="tag != null">  and  task.tag = #{tag} </if>
        <if test="activityInstanceId != null">  and  task.activity_instance_id = #{activityInstanceId} </if>
        <if test="processDefinitionActivityId != null">  and  task.process_definition_activity_id = #{processDefinitionActivityId} </if>
        <if test="processInstanceIdList != null and processInstanceIdList.size>0 ">
            and task.process_instance_id in
            <foreach item="item" index="index" separator="," open="(" close=")"  collection="processInstanceIdList">
                #{item}
            </foreach>
        </if>
    </sql>

    <sql id="where_custom_condition">
        <if test="customFieldsQueryParam != null and customFieldsQueryParam.customFieldConditionList != null">
            <foreach item="item" index="index" separator="" open="" close=""  collection="customFieldsQueryParam.customFieldConditionList">
                <choose>
                    <when test="item.operator=='like' and item.fieldValue!=null">
                        ${item.condition} ${item.fieldName} ${item.operator}  '%${item.fieldValue}%'
                    </when>
                    <otherwise>
                        ${item.condition} ${item.fieldName} ${item.operator}  #{item.fieldValue}
                    </otherwise>
                </choose>
            </foreach>
        </if>
    </sql>

</mapper>

