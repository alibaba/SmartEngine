<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.smart.framework.engine.persister.database.dao.TaskItemInstanceDAO">

    <sql id="baseColumn">
        id, gmt_create, gmt_modified,process_instance_id, process_definition_id_and_version,process_definition_type,
        activity_instance_id, process_definition_activity_id, execution_instance_id,claim_user_id,priority,tag,claim_time,complete_time,status,comment,extension,title,
        task_instance_id,sub_biz_id,biz_id
    </sql>



    <insert id="insert" parameterType="TaskItemInstanceEntity"  useGeneratedKeys="true" keyProperty="id">
        insert into se_task_item_instance(<include refid="baseColumn"/>)
        values (#{id}, now(), now(), #{processInstanceId}, #{processDefinitionIdAndVersion},#{processDefinitionType},
        #{activityInstanceId}, #{processDefinitionActivityId},#{executionInstanceId},#{claimUserId},#{priority},#{tag},#{claimTime},#{completeTime},#{status},#{comment},#{extension},#{title},
        #{taskInstanceId},#{subBizId},#{bizId})
    </insert>

    <delete id="delete" parameterType="long">
        delete from se_task_item_instance where id=#{id}
    </delete>

    <sql id="update_sql">
        <set>
            gmt_modified=now()
            <if test="taskItemInstanceEntity.claimUserId != null">,claim_user_id = #{taskItemInstanceEntity.claimUserId}</if>
            <if test="taskItemInstanceEntity.priority != null">,priority = #{taskItemInstanceEntity.priority}</if>
            <if test="taskItemInstanceEntity.claimTime != null">,claim_time = #{taskItemInstanceEntity.claimTime}</if>
            <if test="taskItemInstanceEntity.completeTime != null">,complete_time = #{taskItemInstanceEntity.completeTime}</if>
            <if test="taskItemInstanceEntity.status != null">,status = #{taskItemInstanceEntity.status}</if>
            <if test="taskItemInstanceEntity.tag != null">, tag = #{taskItemInstanceEntity.tag} </if>
            <if test="taskItemInstanceEntity.comment != null">, comment = #{taskItemInstanceEntity.comment} </if>
            <if test="taskItemInstanceEntity.extension != null">, extension = #{taskItemInstanceEntity.extension} </if>
            <if test="taskItemInstanceEntity.title != null">, title = #{taskItemInstanceEntity.title} </if>

        </set>
    </sql>

    <update id="update" parameterType="TaskItemInstanceEntity">
        update se_task_item_instance
       <include refid="update_sql"/>
        where id=#{taskItemInstanceEntity.id}
    </update>

    <update id="updateFromStatus">
        update se_task_item_instance
        <include refid="update_sql"/>
        where id=#{taskItemInstanceEntity.id} and status = #{fromStatus}
    </update>

    <select id="findOne" resultType="TaskItemInstanceEntity">
        select
        <include refid="baseColumn"/>
        from se_task_item_instance where id=#{id}
    </select>

    <select id="find" resultType="TaskItemInstanceEntity">
        select
        <include refid="baseColumn"/>
        from se_task_item_instance where task_instance_id=#{taskInstanceId} and sub_biz_id = #{subBizId}
    </select>

    <select id="findTaskItemList" resultType="TaskItemInstanceEntity" parameterType="TaskItemInstanceQueryParam">
        select  <include refid="baseColumn"/>
        from  se_task_item_instance task  where 1=1
        <include refid="where_condition"/>
        order by task.gmt_modified desc
    </select>

    <select id="findList" resultType="TaskItemInstanceEntity">
        select  <include refid="baseColumn"/>
        from  se_task_item_instance task  where 1=1
        and id in
        <foreach item="item" index="index" separator="," open="(" close=")"  collection="idList">
            #{item}
        </foreach>
    </select>

    <update id="updateStatusBatch" parameterType="TaskItemInstanceEntity">
        update se_task_item_instance
        <include refid="update_sql"/>
        where
        id in
        <foreach item="item" index="index" separator="," open="(" close=")"  collection="taskItemIdList">
            #{item}
        </foreach>
        <if test = "fromStatus != null" >and status = #{fromStatus} </if>
    </update>


    <select id="count" resultType="int" parameterType="TaskItemInstanceQueryParam">
        select  count(task.id)
        from  se_task_item_instance task where 1=1
        <include refid="where_condition"/>
        <if test="pageOffset != null and pageSize != null">limit #{pageOffset},#{pageSize}</if>
    </select>


    <sql id="where_condition">
        <if test="status != null">  and task.status = #{status} </if>
        <if test="processDefinitionType != null">  and  task.process_definition_type = #{processDefinitionType} </if>
        <if test="claimUserId != null">  and  task.claim_user_id = #{claimUserId} </if>
        <if test="tag != null">  and  task.tag = #{tag} </if>
        <if test="activityInstanceId != null">  and  task.activity_instance_id = #{activityInstanceId} </if>
        <if test="taskInstanceId != null">  and  task.task_instance_id = #{taskInstanceId} </if>
        <if test="subBizId != null">  and  task.sub_biz_id = #{subBizId} </if>
        <if test="processDefinitionActivityId != null">  and  task.process_definition_activity_id = #{processDefinitionActivityId} </if>
        <if test="processInstanceIdList != null">
            and task.process_instance_id in
            <foreach item="item" index="index" separator="," open="(" close=")"  collection="processInstanceIdList">
                #{item}
            </foreach>
        </if>
        <if test="subBizIdList != null">
            and task.sub_biz_id in
            <foreach item="item" index="index" separator="," open="(" close=")"  collection="subBizIdList">
                #{item}
            </foreach>
        </if>
        <if test="bizIdList != null">
            and task.biz_id in
            <foreach item="item" index="index" separator="," open="(" close=")"  collection="bizIdList">
                #{item}
            </foreach>
        </if>
    </sql>

</mapper>

