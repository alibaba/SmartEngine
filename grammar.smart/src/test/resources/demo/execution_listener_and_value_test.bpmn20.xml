<?xml version="1.0" encoding="UTF-8"?>
<definitions id="process_demo" version="1.0.0"
             xmlns="http://smart.alibaba-inc.com/schema/process"
             xmlns:smart="http://smart.alibaba-inc.com/schema/process"
             targetNamespace="Examples">

    <process id="demo" version="1.0.0" name="Process Demo">

        <task id="theStart" isStart="true" smart:class="com.alibaba.smart.framework.engine.modules.smart.TccTracker"/>


        <sequenceFlow id="flow1" sourceRef="theStart" targetRef="create"/>


        <task id="create" name="Create">
            <extensionElements>
                <value name="text" value="Create task"/>
                <executionListener event="ACTIVITY_START,ACTIVITY_END" class="com.alibaba.smart.framework.engine.modules.smart.Listener"/>
            </extensionElements>
            <java action="ACTIVITY_END" class="com.alibaba.smart.framework.engine.modules.smart.Tracker"/>
        </task>

        <sequenceFlow id="flow2" sourceRef="create" targetRef="pay"/>

        <task id="pay" name="Pay" class="com.alibaba.smart.framework.engine.modules.smart.Tracker">
            <extensionElements>
                <value name="text" value="Pay task"/>
                <smart:executionListener class="com.alibaba.smart.framework.engine.modules.smart.Listener"/>
            </extensionElements>
        </task>

        <sequenceFlow id="flow3" sourceRef="pay" targetRef="theEnd"/>

        <task id="theEnd"/>

    </process>

</definitions>
